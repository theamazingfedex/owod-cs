{
  "name": "owod-cs",
  "version": "1.0.0",
  "description": "A digital character sheet for Old World of Darkness.",
  "engines": {
    "node": "10.15.3",
    "npm": "6.9.0"
  },
  "main": "index.js",
  "scripts": {
    "test": "jest",
    "build": "npx npmvet -r ci -s && webpack --mode=production",
    "start": "serve -s dist",
    "dev": "webpack-dev-server --hot",
    "checkUpdates": "npx npm-check-updates",
    "applyUpdates": "npx npm-check-updates -u",
    "vetDependencies": "npx npmvet -r blessed",
    "snyk-protect": "snyk protect",
    "prepublish": "npm run snyk-protect"
  },
  "author": "Daniel Wood (daniel.a.wood.jr@gmail.com)",
  "license": "MIT",
  "jest": {
    "setupTestFrameworkScriptFile": "jest-enzyme",
    "testEnvironment": "enzyme",
    "testEnvironmentOptions": {
      "enzymeAdapter": "react16"
    }
  },
  "devDependencies": {
    "@babel/core": "7.4.5",
    "@babel/preset-env": "7.4.5",
    "@babel/preset-react": "7.0.0",
    "babel-loader": "8.0.6",
    "copy-webpack-plugin": "5.0.3",
    "enzyme": "3.9.0",
    "enzyme-adapter-react-16": "1.13.2",
    "html-loader": "0.5.5",
    "html-webpack-plugin": "3.2.0",
    "jest": "24.8.0",
    "jest-environment-enzyme": "7.0.2",
    "jest-enzyme": "7.0.2",
    "prop-types": "15.7.2",
    "react-hot-loader": "4.8.8",
    "webpack": "4.32.2",
    "webpack-cli": "3.3.2",
    "webpack-dev-server": "3.4.1"
  },
  "dependencies": {
    "file-loader": "3.0.1",
    "react": "16.8.6",
    "react-dom": "16.8.6",
    "react-rating": "1.7.2",
    "react-select": "3.0.3",
    "serve": "11.0.0",
    "styled-jsx": "3.2.1",
    "snyk": "^1.317.0"
  },
  "snyk": true
}
